{
  "name": "c3edit",
  "displayName": "c3edit",
  "description": "Real-time cross-editor collaborative code editing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "c3edit Configuration",
      "properties": {
        "c3edit.backendPath": {
          "type": "string",
          "default": "",
          "description": "Path to the backend binary."
        },
        "c3edit.port": {
          "type": "number",
          "default": 6969,
          "description": "Port to run the backend on."
        }
      }
    },
    "commands": [
      {
        "command": "c3edit.helloWorld",
        "title": "c3edit: Hello World"
      },
      {
        "command": "c3edit.runBackend",
        "title": "c3edit: Run Backend"
      },
      {
        "command": "c3edit.createDocument",
        "title": "c3edit: Create Document"
      },
      {
        "command": "c3edit.connectToPeer",
        "title": "c3edit: Connect to Peer"
      },
      {
        "command": "c3edit.joinDocument",
        "title": "c3edit: Join Document"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  }
}
